---
IrresponsibleModule:
  enabled: false
NestedIterators:
  max_allowed_nesting: 2
"app/controllers":
  IrresponsibleModule:
    enabled: false
  NestedIterators:
    max_allowed_nesting: 2
  UnusedPrivateMethod:
    enabled: false
  InstanceVariableAssumption:
    enabled: false
"app/helpers":
  IrresponsibleModule:
    enabled: false
  UtilityFunction:
    enabled: false
"app/services":
  UtilityFunction:
    enabled: false
  DataClump:
    enabled: false
  FeatureEnvy:
    enabled: false


exclude_paths:
  - tmp
  - vendor
  - log
  - coverage
  - bin
  - db/migrate
  - spec/routing/api
  - spec/support

UncommunicativeModuleName:
  accept:
    - V1

TooManyStatements:
  max_statements: 10
